<%- include('header') %>

  <h2>
    Editar Vaga:
    <a href="/admin/vagas">Vagas</a>
   </h2>
    <div>
      <form method="POST">
        <label>Titulo:</label>
        <input type="text" name="titulo" value="<%= vaga.titulo %>">
        <br>
        <label>Descricao:</label>
        <textarea name="descricao"><%= vaga.descricao %></textarea>

        <label for="">Categoria: </label>
        <select name="categoria">
          <% categorias.forEach( categoria => { %> 
            
            <option value="<%= categoria.id %>" <% if(categoria.id == vaga.categoria_id){ %>select<% } %>>
              <%= categoria.name %>
            </option>
          <% }) %>
        </select>
        <br>
        <button>Actualizar Vaga</button>
      </form>
    </div>

<%- include('footer') %>